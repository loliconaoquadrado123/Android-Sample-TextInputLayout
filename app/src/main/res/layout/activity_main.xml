<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.textfields.jordroid.textfields.MainActivity">

 <android.support.design.widget.TextInputLayout
     android:id="@+id/til_label"
     android:hint="First sample label"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginEnd="8dp"
     android:layout_marginStart="8dp"
     android:layout_marginTop="8dp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent">

     <android.support.design.widget.TextInputEditText
         android:id="@+id/tit_text"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="Some placeholder text here" />

 </android.support.design.widget.TextInputLayout>

 <TextView
     android:id="@+id/tv_til_helper"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginEnd="8dp"
     android:layout_marginStart="12dp"
     android:layout_marginTop="0dp"
     android:textSize="12sp"
     android:text="This is helper text"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/til_label" />


</android.support.constraint.ConstraintLayout>
